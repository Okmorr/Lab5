<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lab5.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		MinWidth="400" Height="500" Width="400" MaxHeight="500" MaxWidth="400"
        x:Class="Lab5.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Lab5">
	
	<WrapPanel>
		<TextBox Name="InputText" Text="{Binding Input}" Height="400" Width="200" AcceptsReturn="True"  TextWrapping="Wrap"></TextBox>
		<TextBox Name="OutputText" Text="{Binding Output}" Watermark="Создать выражение:" Height="400" Width="200" AcceptsReturn="True" TextWrapping="Wrap" Focusable="False"></TextBox>
			<Button Name="OpenFileDialog" Height="50" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >Открыть файл</Button>
			<Button Name="SaveFileDialog" Height="50" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >Сохранить файл</Button>
			<Button Name="SetRegexDialog" Height="50" Width="400" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >Ввести выражения</Button>
	</WrapPanel>

</Window>
